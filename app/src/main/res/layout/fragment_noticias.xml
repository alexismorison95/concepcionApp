<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.NoticiasFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAtras"
                android:layout_margin="1dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:drawableStart="@drawable/ic_arrow_back_black_24dp"
                android:paddingLeft="16dp"/>

            <Button
                android:layout_margin="1dp"
                android:id="@+id/btnAdelante"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:drawableStart="@drawable/ic_arrow_forward_black_24dp"
                android:paddingLeft="16dp"/>

            <Button
                android:layout_margin="1dp"
                android:id="@+id/btnReload"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:drawableStart="@drawable/ic_refresh_black_24dp"
                android:paddingLeft="16dp"/>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <WebView
        android:id="@+id/noticias_webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"/>
    
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        style="?attr/progressBarStyle" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>