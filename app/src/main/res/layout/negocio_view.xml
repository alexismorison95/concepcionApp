<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/negocio_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/negocio_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de negocio"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/negocio_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="10"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:text="Descripcion: Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_google_maps"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"/>

            <TextView
                android:id="@+id/negocio_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tibiletti 478, Concepcion del Uruguay, Entre Rios"
                android:textColorLink="@color/colorText"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_whatsapp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"/>

            <TextView
                android:id="@+id/negocio_whatsapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+543445402211"
                android:textColorLink="@color/colorText"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_call_black_24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"/>

            <TextView
                android:id="@+id/negocio_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="03445-15402211"
                android:autoLink="phone"
                android:textColorLink="@color/colorText"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_access_time_black_24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"/>

            <TextView
                android:id="@+id/negocio_horarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="18hs a 23hs"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_gravity="bottom"/>

</androidx.cardview.widget.CardView>


